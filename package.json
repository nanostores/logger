{
  "name": "@nanostores/logger",
  "version": "0.3.0",
  "description": "Pretty logger of lifecycles and changes for Nano Stores",
  "keywords": [
    "nanostores",
    "devtools",
    "logger",
    "store",
    "state",
    "nano"
  ],
  "scripts": {
    "demo": "vite ./demo",
    "test:lint": "eslint .",
    "test:coverage": "vitest run --coverage",
    "test:types": "check-dts",
    "test:size": "size-limit",
    "test": "pnpm --color run /^test:/"
  },
  "author": "Eduard Aksamitov <e@euaaaio.ru>",
  "license": "MIT",
  "repository": "nanostores/logger",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "peerDependencies": {
    "nanostores": ">=0.10.2"
  },
  "devDependencies": {
    "@logux/eslint-config": "^53.3.0",
    "@size-limit/preset-small-lib": "^11.1.4",
    "@types/node": "^22.1.0",
    "@vitest/coverage-v8": "^2.0.5",
    "check-dts": "^0.8.0",
    "eslint": "^9.8.0",
    "happy-dom": "^14.12.3",
    "nano-staged": "^0.8.0",
    "nanodelay": "^2.0.2",
    "nanostores": "^0.11.2",
    "prettier": "^3.3.3",
    "simple-git-hooks": "^2.11.1",
    "size-limit": "^11.1.4",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "vitest": "^2.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "nano-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "size-limit": [
    {
      "path": "./index.js",
      "import": "{ logger }",
      "limit": "901 B"
    }
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
