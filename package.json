{
  "name": "@nanostores/logger",
  "version": "0.0.0",
  "description": "Logger of lifecycles, actions and changes for Nano Stores",
  "keywords": [
    "nanostores",
    "devtools",
    "logger",
    "store",
    "state",
    "nano"
  ],
  "scripts": {
    "test": "pnpm unit && eslint . && check-dts && size-limit",
    "unit": "vitest run --coverage"
  },
  "author": "Eduard Aksamitov <e@euaaaio.ru>",
  "license": "MIT",
  "repository": "nanostores/logger",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "peerDependencies": {
    "nanostores": ">=0.9.2"
  },
  "devDependencies": {
    "@logux/eslint-config": "^51.0.0",
    "@size-limit/preset-small-lib": "^8.2.6",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "@vitest/coverage-v8": "^0.32.2",
    "check-dts": "^0.7.2",
    "eslint": "^8.43.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-perfectionist": "^1.4.0",
    "eslint-plugin-prefer-let": "^3.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "happy-dom": "^9.20.3",
    "nano-staged": "^0.8.0",
    "nanodelay": "^2.0.2",
    "nanostores": "^0.9.3",
    "prettier": "^2.8.8",
    "simple-git-hooks": "^2.8.1",
    "size-limit": "^8.2.6",
    "typescript": "^5.1.3",
    "vitest": "^0.32.2"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "nano-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/esm",
    "rules": {
      "no-console": "off"
    }
  },
  "size-limit": [
    {
      "path": "./index.js",
      "import": "{ logger }",
      "limit": "1193 B"
    }
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
