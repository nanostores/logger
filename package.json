{
  "name": "@nanostores/logger",
  "version": "0.3.0",
  "description": "Pretty logger of lifecycles, changes and actions for Nano Stores",
  "keywords": [
    "nanostores",
    "devtools",
    "logger",
    "store",
    "state",
    "nano"
  ],
  "scripts": {
    "demo": "vite ./demo",
    "test:lint": "eslint .",
    "test:coverage": "vitest run --coverage",
    "test:types": "check-dts",
    "test:size": "size-limit",
    "test": "pnpm --color run /^test:/"
  },
  "author": "Eduard Aksamitov <e@euaaaio.ru>",
  "license": "MIT",
  "repository": "nanostores/logger",
  "sideEffects": false,
  "type": "module",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./package.json": "./package.json"
  },
  "packageManager": "pnpm@10.8.0",
  "engines": {
    "node": "^20.0.0 || >=22.0.0"
  },
  "funding": [
    {
      "type": "buymeacoffee",
      "url": "https://buymeacoffee.com/euaaaio"
    }
  ],
  "peerDependencies": {
    "nanostores": ">=1.0.1"
  },
  "devDependencies": {
    "@logux/eslint-config": "^55.2.1",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "^3.1.1",
    "check-dts": "^0.9.0",
    "eslint": "^9.25.0",
    "happy-dom": "^17.4.4",
    "nano-staged": "^0.8.0",
    "nanodelay": "^2.0.2",
    "nanostores": "^1.0.1",
    "prettier": "^3.5.3",
    "simple-git-hooks": "^2.12.1",
    "size-limit": "^11.2.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.2",
    "vitest": "^3.1.1"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "nano-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "size-limit": [
    {
      "path": "./index.js",
      "import": "{ logger }",
      "limit": "1408 B"
    }
  ],
  "clean-publish": {
    "cleanDocs": true
  }
}
